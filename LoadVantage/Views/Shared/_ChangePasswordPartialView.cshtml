@using Microsoft.AspNetCore.Mvc.TagHelpers
@model LoadVantage.Core.Models.Profile.ChangePasswordViewModel


<div class="tab-pane fade pt-3" id="profile-change-password">

	<form asp-action="ChangePassword" asp-controller="Broker" method="post" id="changePasswordForm">
		@Html.AntiForgeryToken()

		<div class="row mb-3">
			<label for="currentPassword" class="col-md-4 col-lg-3 col-form-label">Current Password</label>
			<div class="col-md-8 col-lg-9">
				<input type="password" asp-for="CurrentPassword"  class="form-control" id="currentPassword">
				@* @Html.ValidationMessageFor(model => model.CurrentPassword, "", new { @class = "text-danger" }) *@
				<span asp-validation-for="CurrentPassword" class="badge badge-danger mt-1"></span>
			</div>
		</div>

		<div class="row mb-3">
			<label for="newPassword" class="col-md-4 col-lg-3 col-form-label">New Password</label>
			<div class="col-md-8 col-lg-9">
				<input type="password" asp-for="NewPassword" class="form-control" id="newPassword">
				@* @Html.ValidationMessageFor(model => model.NewPassword, "", new { @class = "text-danger" }) *@
				<span asp-validation-for="NewPassword" class="badge badge-danger mt-1"></span>
			</div>
		</div>

		<div class="row mb-3">
			<label for="renewPassword" class="col-md-4 col-lg-3 col-form-label">Re-enter New Password</label>
			<div class="col-md-8 col-lg-9">
				<input type="password" asp-for="ConfirmPassword" class="form-control" id="renewPassword">
				@* @Html.ValidationMessageFor(model => model.ConfirmPassword, "", new { @class = "text-danger" }) *@
				<span asp-validation-for="ConfirmPassword" class="badge badge-danger mt-1"></span>
			</div>
		</div>

		<div class="text-center">
			<button type="submit" class="btn btn-primary">Change Password</button>
		</div>
	</form>

</div>

